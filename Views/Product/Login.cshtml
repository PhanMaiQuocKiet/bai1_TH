@model BaiTH1.Models.User
@{
    ViewBag.Title = "Login";
}


<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Login</h2>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                @using (Html.BeginForm("Login", "Product", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName)
                        @Html.TextBoxFor(model => model.UserName, "", new { @class = "form-control", @placeholder = "UserName" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Passwords)
                        @Html.PasswordFor(model => model.Passwords, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" name="submit" class="btn btn-primary m-3" value="Login" />
                        @Html.ActionLink("Create Account", "CreateUser", null, new { @class = "btn btn-outline-danger m-3" })
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                }
            </div>
        </div>
    </div>
</div>

